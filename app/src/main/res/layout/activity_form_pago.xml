<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txtNombre"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8ECF0"
    tools:context=".FormPago">

    <Button
        android:id="@+id/Enviarpago"
        android:layout_width="137dp"
        android:layout_height="45dp"
        android:backgroundTint="#F60062"
        android:text="Enviar Pedido"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.973"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.956" />

    <Button
        android:id="@+id/VerDelivery"
        android:layout_width="126dp"
        android:layout_height="46dp"
        android:backgroundTint="#F60062"
        android:text="Ver delivery"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.943"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.874" />

    <LinearLayout
        android:layout_width="416dp"
        android:layout_height="60dp"
        android:background="#F65F7D"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <SearchView
            android:layout_width="404dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonAtraspago"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:backgroundTint="#F60062"
        android:text="Atras"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <CheckBox
        android:id="@+id/checkBox21"
        android:layout_width="89dp"
        android:layout_height="46dp"
        android:text="Efectivo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.845" />

    <CheckBox
        android:id="@+id/checkBox22"
        android:layout_width="99dp"
        android:layout_height="46dp"
        android:text="Tarjeta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.362"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.845" />

    <LinearLayout
        android:layout_width="403dp"
        android:layout_height="507dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.277">

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Ingrese sus Datos para el Envio"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="127dp"
            android:layout_height="98dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="-40dp"
            app:srcCompat="@drawable/descarga_removebg_preview" />

        <EditText
            android:id="@+id/txtNombreC"
            android:layout_width="217dp"
            android:layout_height="51dp"
            android:layout_marginTop="0dp"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="text" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="11dp" />

        <EditText
            android:id="@+id/txtApellidoC"
            android:layout_width="218dp"
            android:layout_height="49dp"
            android:layout_marginTop="0dp"
            android:ems="10"
            android:hint="Apellido"
            android:inputType="text" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="11dp" />

        <TextView
            android:id="@+id/txtHelados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/txtRutC"
            android:layout_width="220dp"
            android:layout_height="44dp"
            android:ems="10"
            android:hint="Rut"
            android:inputType="text" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/txtPC"
            android:layout_width="219dp"
            android:layout_height="49dp"
            android:ems="10"
            android:hint="Poblacion"
            android:inputType="text" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/txtPasajeC"
            android:layout_width="219dp"
            android:layout_height="45dp"
            android:ems="10"
            android:hint="Pasaje"
            android:inputType="text" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/txtCalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Calle"
            android:inputType="text" />

        <EditText
            android:id="@+id/txtCasa"
            android:layout_width="110dp"
            android:layout_height="47dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="-45dp"
            android:ems="10"
            android:hint="Casa"
            android:inputType="number" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>